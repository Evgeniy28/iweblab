@font-face {
		font-family: 'open_sanslight';
		src: url('<%= font_path('open-sans-light.eot') %>');
		src: url('<%= font_path('open-sans-light.eot') + '?#iefix' %>') format('embedded-opentype'),
				 url('<%= font_path('open-sans-light.woff2') %>') format('woff2'),
				 url('<%= font_path('open-sans-light.woff') %>') format('woff'),
				 url('<%= font_path('open-sans-light.ttf') %>') format('truetype'),
				 url('<%= font_path('open-sans-light.svg') + '#open_sanslight' %>') format('svg');
		font-weight: normal;
		font-style: normal;
}